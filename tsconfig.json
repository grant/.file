{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "lib": ["ESNext"],
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "importHelpers": true // canary: will cause runtime error if `tslib` is necessary
  },
  "include": [
    "src"
  ]
}
